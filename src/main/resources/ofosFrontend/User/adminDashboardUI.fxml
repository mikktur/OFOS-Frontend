<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ofosFrontend.controller.User.AdminDashboardController"
      style="-fx-padding: 20; -fx-background-color: #f7f9fb;">
    <children>
        <!-- Title -->
        <Label text="%Admin_Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

        <!-- Dropdown for Restaurants -->
        <VBox spacing="10.0">
            <Label text="%Manage_Restaurants" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <ComboBox fx:id="restaurantSelector" promptText="%Select_a_Restaurant"/>
            <Button text="%Edit_Selected_Restaurant" onAction="#handleEditRestaurant"/>
        </VBox>

        <!-- Dropdown for Users -->
        <VBox spacing="10.0">
            <Label text="%Manage_Users" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <ComboBox fx:id="userSelector" promptText="%Select_a_User"/>
            <Button text="%Edit_Selected_User" onAction="#handleEditUser"/>
        </VBox>

        <!-- Dropdown for Products -->
        <VBox spacing="10.0">
            <Label text="%Manage_Products" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <ComboBox fx:id="productSelector" promptText="%Select_a_Product"/>
            <Button text="%Edit_Selected_Product" onAction="#handleEditProduct"/>
        </VBox>
    </children>
</VBox>
