<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ofosFrontend.controller.User.userSettings.EditAddressDialogController"
      spacing="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Edit Delivery Address" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <Label text="Street Address:" />
    <TextField fx:id="streetAddressField" />

    <Label text="City:" />
    <TextField fx:id="cityField" />

    <Label text="Postal Code:" />
    <TextField fx:id="postalCodeField" />

    <Label text="Instructions:" />
    <TextArea fx:id="instructionsArea" prefRowCount="3" wrapText="true" />

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" />
        <Button text="Save" onAction="#handleSave" />
    </HBox>
</VBox>
