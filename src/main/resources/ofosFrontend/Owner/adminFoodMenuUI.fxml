<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ofosFrontend.controller.AdminMenuController">
   <children>
      <Text fx:id="restaurantNameText" strokeType="OUTSIDE" strokeWidth="0.0" text="Restaurant" textAlignment="CENTER" VBox.vgrow="ALWAYS">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Text>
      <VBox fx:id="productListVBox" prefHeight="341.0" prefWidth="664.0" spacing="10.0" style="-fx-background-color: #c4e6fb; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 10, 0, 5, 5);">
         <VBox.margin>
            <Insets bottom="10.0" left="20.0" right="20.0" top="5.0" />
         </VBox.margin>
      </VBox>
      <Button fx:id="addFoodItem" mnemonicParsing="false" onAction="#addItem" text="Add product" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
